<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:paddingRight="5sp" android:paddingLeft="5sp"
              android:paddingTop="0px"
              android:paddingBottom="0px" android:background="#000000">

    <LinearLayout
            android:background="@drawable/papertile" android:orientation="vertical"
            android:layout_width="fill_parent" android:layout_height="fill_parent">

        <LinearLayout android:id="@+id/topbar" android:layout_width="fill_parent" android:orientation="vertical"
                      android:layout_height="wrap_content"
                      android:paddingTop="0px">

            <ImageView android:id="@+id/rulertop" android:src="@drawable/top" android:layout_width="wrap_content"
                       android:paddingTop="0px" android:layout_marginTop="0px"
                       android:layout_height="wrap_content"/>

            <TextView android:id="@+id/recipeTitle" android:gravity="center_horizontal"
                      android:text="@string/formulas"
                      android:textSize="60sp"
                      android:textColor="#333333"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <ListView android:id="@+id/recipeingredientlist" android:layout_width="fill_parent" android:layout_weight="1"
                  android:cacheColorHint="#00000000" android:background="#00000000"
                  android:layout_height="fill_parent"/>

        <RelativeLayout android:background="@drawable/bottom" android:layout_width="fill_parent"
                        android:paddingTop="10sp"
                        android:layout_height="wrap_content">

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>